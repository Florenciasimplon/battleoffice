{# Etape 2 #}
<div class="card step_2">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
            <div class="input-field">
                {{ form_widget(form.client.prenom) }}
                <label>Prénom</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                 {{ form_widget(form.client.nom) }}
                <label>Nom</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
               {{ form_widget(form.client.adresse) }}
                <label>Adresse</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
              {{ form_widget(form.client.complement) }}
                <label>Complément adr.</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.client.ville) }}
                <label>Ville</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
              {{ form_widget(form.client.codepostal) }}
                <label>Code postal</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.client.pays) }}
                <label>Pays</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                 {{ form_widget(form.client.telephone) }}
                <label>Téléphone</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.client.email) }}
                <label>Email</label>
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.client.confirm_email) }}
                <label>Confirmation email</label>
                <div class="form-error"></div>
            </div>
        </div>
    </div>
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
            <div class="collapsible-body">
                <div class="input-field">
                    {{ form_widget(form.livraison.prenom) }}
                    <label>Prénom</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.livraison.nom) }}
                    <label>Nom</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   {{ form_widget(form.livraison.adresse_livraison) }}
                    <label>Adresse</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.livraison.complement_livraison) }}
                    <label>Complément adr.</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.livraison.ville) }}
                    <label>Ville</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.livraison.code_postal) }}
                    <label>Code postal</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   
                        {{form_widget(form.livraison.pays)}}
                         {{form_label(form.livraison.pays)}}
                    <label>Pays</label>
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   {{ form_widget(form.livraison.telephone) }}
                   {{ form_label(form.livraison.telephone) }}
                    <div class="form-error"></div>
                </div>
                
            </div>
        </li>
    </ul>
</div>
{# Etape 3 #}
